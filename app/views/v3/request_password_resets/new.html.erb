<div class="container">
  <%= form_for @interactor, url: request_password_reset_path, html: {class: "form-horizontal"} do |form| %>
    <fieldset>
      <legend>Request Password Reset</legend>

      <%= form.group :email do %>
        <%= form.label :email, class: "control-label col-md-2" %>
        <div class="col-md-10">
          <%= form.email_field :email, class: "form-control input-lg" %>
          <%= form.help_block :email %>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
          <%= form.submit "Send Request", class: "btn btn-block btn-lg btn-primary" %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>
