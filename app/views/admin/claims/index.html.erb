<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-push-8">
      <form action="<%= admin_claims_path %>" method="get" class="form-horizontal">
        <div class="panel panel-default">
          <div class="panel-heading">
            <strong>Filters</strong>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <%= label_tag :user_id, "Doctor", class: "control-label col-md-2" %>
              <div class="col-md-10">
                <%= select_tag :user_id, options_from_collection_for_select(policy_scope(:user), "id", "name", user_id_filter), class: "form-control", prompt: "All" %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2">Status</label>
              <div class="col-md-10">
                <%= hidden_field_tag "status[]", nil %>
                <% Claim.statuses.each do |name, value| %>
                  <div class="checkbox">
                    <label>
                      <%= check_box_tag "status[]", value, status_filter.include?(value.to_s) %>
                      <%= name.humanize %>
                    </label>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-10 col-md-offset-2">
                <%= icon_submit "filter", "Filter", class: "btn btn-primary", name: "" %>
              </div>
            </div>
          </div>
        </div>
      </form>
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong>Generate Submission</strong>
        </div>
        <div class="panel-body">
          <% if user_id_filter.present? %>
            <% if status_filter == [Claim.statuses["ready"].to_s] %>
              <% if @claims.length > 0 %>
                <form action="<%= admin_user_submissions_path(user_id: user_id_filter) %>" method="post" class="form-horizontal">
                  <%= icon_submit "cogs", "Generate", class: "btn btn-primary", name: "" %>
                </form>
              <% else %>
                No claims ready for this doctor
              <% end %>
            <% else %>
              <form action="<%= admin_claims_path %>" method="get" class="form-horizontal">
                <%= hidden_field_tag :user_id, user_id_filter %>
                <%= hidden_field_tag "status[]", Claim.statuses["ready"] %>
                <%= icon_submit "filter", "Show Ready Claims", class: "btn btn-primary", name: "" %>
              </form>
            <% end %>
          <% else %>
            Please select a doctor
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-8 col-md-pull-4">
      <table class="table table-striped">
        <tr>
          <th><%= sortable_link_to "claims.number", "Number" %></th>
          <th class="text-center"><%= sortable_link_to "users.name", "Doctor" %></th>
          <th class="text-center"><%= sortable_link_to "claims.status", "Status" %></th>
          <th class="text-center"><%= sortable_link_to "claims.details->>'patient_name'", "Patient Name" %></th>
          <th class="text-right" colspan="2">Actions</th>
        </tr>
        <% @claims.each.with_index do |claim, index| %>
          <tr>
            <td><%= claim.number %></td>
            <td class="text-center"><%= claim.user.name %></td>
            <td class="text-center"><%= claim.status.humanize %></td>
            <td class="text-center"><%= claim.details["patient_name"] %></td>
            <td class="text-right"><%= link_to "View", edit_admin_claim_path(claim, next: @claims.drop(index+1).map(&:id)) %></td>
            <td class="text-right"><%= link_to "Edit", "/#/claims/#{claim.id}/edit" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
